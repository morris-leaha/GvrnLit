    <title>GvrnLit</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="../images/favicomatic-transparent/favicon-32x32.png" sizes="16x16" />
</head>

<body>

    <header>
        <nav class="navigation navbar navbar-expand-md navbar-dark pt-2 pb-3 pr-3 pl-2 mb-3">
            <!-- NAVBAR BRAND -->
            <a class="navbar-brand" href="/index">
                <img src="../images/gavel-stars_transparent.png" width="140" height="60"
                    class="d-inline-block align-top" alt="logo">
            </a>
            <!-- NAVBAR TOGGLER BUTTON -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler"
                aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- NAVBAR LINKS -->
            <div class="collapse navbar-collapse" id="navbarToggler">
                <ul class="navbar-nav mr-auto">
                    <li id="navCandidates" class="nav-item">
                        <a class="nav-link" href="/allCandidates" title="Click to See All Candidates">All Candidates</a>
                    </li>
                    <li id="navVotingInfo" class="nav-item">
                        <a class="nav-link" href="/voting-info" title="Click for Voting Information">Voting
                            Information</a>
                    </li>
                </ul>
                <!-- TAKE QUIZ BUTTON -->
                <a class="take-quizBTN btn btn-danger px-3" href="/quiz-ALL" title="Click here to find your match!">Take
                    Our Quiz</a>
            </div>
        </nav>
    </header>


    <div class="container">

        <main>
            {{#each data}}
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card text-justify mt-3 mb-3">
                        <div class="card-body">
                            <h6 class="question-text">{{this.candidate_position}}</h6>
                            <div class="row text-center">
                                <div class="col">
                                    <button value="yes" data-id=""><i class="far fa-thumbs-up fa-2x"></i></button>
                                </div>
                                <div class="col">
                                    <button value="no" data-id=""><i class="far fa-thumbs-down fa-2x"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}

            <!-- QUESTIONS -->
            {{!-- <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card text-center mt-3 mb-3">
                        <div class="card-body">
                            <label for="q1" class="mx-auto"><i class="fa fa-credit-card fa-4x"></i></label>
                            <h3> Topic </h3>
                            <h6 class="question-text">
                                {{#each candidate_position}}
                                {{candidate_position.question}}
